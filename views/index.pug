doctype html
html
  head
    title= "R Mart - Logistics Department"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')

body
  h1 R Mart - Logistics & Inventory Manager
  h3 Please select one of the following options:
  div(class="d-grid gap-2 col-4 mx-auto mb-3")
    button(type="button" class="btn btn-primary" id = 'view-inventory') View Inventory
    button(type="button" class="btn btn-primary" id = 'add-item') Add Item
    button(type="button" class="btn btn-primary" id = 'add-warehouse') Add Warehouse

  div(class = 'mb-3 d-none' id = "add-item-form-wrapper")
    form(action="" id = 'add-item-form') 
      div(class = "row g-3")
        div(class = "mb-3 col-sm-7")
          label Item name
          input(type="text", name="" class="form-control" placeholder="Item Name" id = "item-name-input") 
        div(class = "mb-3 col-sm")
          label Wholesale Unit Price
          input(type="text", name="" class="form-control" placeholder="$00.00" id = "w-price-input") 
        div(class = "mb-3 col-sm")
          label Retail Unit Price
          input(type="text", name="" class="form-control" placeholder="$00.00" id = "r-price-input") 
      div(class = "row")
        div(class = "mb-3 col")
          select(class = "form-select form-select-sm" id = "cat-dropdown")
              option(selected) Select a category
              option(value = "Apparel") Apparel
              option(value = "Automotive") Automotive
              option(value = "Hardware") Hardware
              option(value = "Home") Home
              option(value = "Kitchen") Kitchen
              option(value = "Seasonal") Seasonal
              option(value = "Sporting Goods") Sporting Goods
        div(class = "mb-3 col")
          select(class = "form-select form-select-sm" id = "supplier-dropdown")
            option(selected) Select a category
            option(value = "Sporting Goods Distributor LTD.") Sporting Goods Distributor LTD.
            option(value = "Hardware and More") Hardware and More
            option(value = "Home and Kitchen Supplies") Automotive
        div(class = "mb-3 col")
          select(class = "form-select form-select-sm" id = "warehouse-dropdown")
            option(selected) Select a warehouse
            option(value = "Metro Van Storage") Metro Van Storage
            option(value = "Hamilton Warehouse Services") Hamilton Warehouse Services
            option(value = "Giga Warehouse") Giga Warehouse
            option(value = "other") Other
      div(class="d-grid gap-2 col-4 mx-auto mb-3")
        button(type="submit" class="btn btn-success" id = 'submit-add-item') Submit Item
      
          


  div(class = "d-none" id = "items-table-wrapper")
    table(class="table table-striped" id = "items-table ")
      thead
        tr
          td Item ID 
          td Item Name
          td Product Category
          td Supplier
          td Wholesale Unit Price
          td Retail Unit Price
          td Storage Warehouse
      tbody(id = 'items-table-body')
        tr 
          td "a-111"	
          td "Kenda Winter Tires"	
          td "Automotive"	
          td "6543"	
          td 600.00	
          td 780.00	
          td "Metro Van Storage"
        tr(class = "table-primary")
          td "a-111"	
          td "Kenda Winter Tires"	
          td "Automotive"	
          td "6543"	
          td 600.00	
          td 780.00	
          td "Metro Van Storage"
        tr 
          td "a-111"	
          td "Kenda Winter Tires"	
          td "Automotive"	
          td "6543"	
          td 600.00	
          td 780.00	
          td "Metro Van Storage"
    div(class="d-grid gap-2 col-4 mx-auto mb-3")
        button(type="submit" class="btn btn-primary" id = 'edit-item') Edit Item
        button(type="submit" class="btn btn-danger" id = 'delete-item') Delete Item
    
